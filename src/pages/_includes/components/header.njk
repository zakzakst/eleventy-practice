<header>
  <nav>
    <ul>
      {% for ITEM in site.main_nav_items %}
        {# クラス名を判定 #}
        {% if ITEM.id === PAGE_DATA.NAV %}
          {% set CLASS = ' class="--current"' %}
        {% else %}
          {% set CLASS = '' %}
        {% endif %}

        <li>
          <a href="{{ ITEM.link }}"{{ CLASS | safe }}>{{ ITEM.label }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>
